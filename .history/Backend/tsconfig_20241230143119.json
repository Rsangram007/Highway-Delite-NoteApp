{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "rootDir": "./index.ts",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "noImplicitAny": true,
    "strictNullChecks": true
  },
  "include": ["**/*."],
  "exclude": ["node_modules", "dist"]
}
