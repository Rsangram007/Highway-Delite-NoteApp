{
  "compilerOptions": {
    "target": "es2020", // Modern target for newer JavaScript features
    "module": "commonjs", // Compatible with Node.js
    "rootDir": "./", // Define the root directory for TypeScript files
    "outDir": "./dist", // Output compiled JavaScript files into 'dist' folder
    "esModuleInterop": true, // Enable interop between CommonJS and ES modules
    "forceConsistentCasingInFileNames": true,
    "strict": true, // Enable all strict type-checking options
    "skipLibCheck": true, // Skip type checking of declaration files for faster builds
    "resolveJsonModule": true, // Allow importing JSON files
    "allowJs": true, // Allow compiling .js files
    "noImplicitAny": true, // Avoid using `any` type unless explicitly defined
    "strictNullChecks": true // Ensure null and undefined are handled properly
  },
  "include": ["Backend/**/*"],  
  "exclude": ["node_modules", "dist"]  
}
